{
  "version": 2,
  "builds": [{
    "src": "package.json",
    "use": "@vercel/static-build",
    "config": {
      "distDir": "dist",
      "cleanDistDir": true
    }
  }],
  "routes": [
    { "src": "/api/(.*)", "dest": "https://procalender-backend.onrender.com/$1" },
    { "handle": "filesystem" },
    { "src": "/assets/(.*)", "dest": "/dist/assets/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}